 <p id="notice"><%= notice %></p>

 <h1>
   <strong>Title:</strong>
   <%= @post.title %>
 </h1>
  <div>
  <%=image_tag @post.header_image.variant(resize_to_limit: [500, 500])%>
  </div>
 <p>
   <strong>Body:</strong>
   <%= @post.body %>
 </p>

<% if @post.uploads.any? %>
   <h3>Images</h3>
<% @post.uploads.each do |file| %>
    <% if file.variable? %> 
      <%= image_tag file.variant(resize_to_limit: [400, 400]) %>
    <% elsif file.previewable? %>
      <%= image_tag file.variant(resize_to_limit: [400, 400]), rails_blob_path(file, disposition: :attachement) %>
    <% else %>
      <%= link_to file.filename, rails_blob_path(file, disposition: :attachment) %>
    <% end %>
  <% end %>
<% end %>

 <%= link_to 'Edit', edit_post_path(@post) %> |
 <%= link_to 'Back', posts_path %>
 

  
  